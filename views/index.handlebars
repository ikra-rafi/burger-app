 <header><h1 id="h1">Eat-Da-Burger!</h1></header>
            <div class="row">
                <div class="col-md-4">
                    <div class="card" id="cards" >
                        <div class="card-header">
                          <h5> Burgers Available!</h5>
                        </div>
                        <ul class="list-group list-group-flush" id ="list">
                          {{#each burgers}}
                            {{#unless devoured}}
                              <li class="list-group-item" id ="list">{{> burgers/burger-block devoured=true}}</li>
                            {{/unless}}
                          {{/each}}
                        </ul>
                      </div>
                </div> 
                <div id="input" class="col-md-4">
                    <div class="card" id="cards">
                        <img src="https://media.giphy.com/media/3oEdv5S8Th6b9gsNqM/giphy.gif" class="text-center" id="gif">
                            <div class="card-body">
                                <form class="create-form">
                                    <p>Type your Burger and click submit</p>
                                        <div class="input-group">
                                            <div class="col">
                                                <input type="text" id="Bg" class="form-control" placeholder="Enter Burger">
                                            </div>
                                        </div>
                                        <div>
                                           <button type="submit" class="btn btn-danger" >Submit</button>
                                        </div>
                                </form>
                            </div>
                    </div>
                </div> 
                <div class="col-md-4">
                <div class="card" id="cards" >
                    <div class="card-header">
                      <h5>Devoured Burgers!</h5>
                    </div>
                        <i class="fas fa-trash-alt"></i>
                    <ul class="list-group list-group-flush">
                  
                        {{#each burgers}}
                            {{#if devoured}}
                                <li class="list-group-item" id ="list">{{> burgers/burger-block devoured=false}}</li>
                            {{/if}}
                        {{/each}}
                    </ul>
                  </div>
                </div>
            </div>
        </div>
